<% layout("boilerplate") -%>
<body>
    <div style="margin:auto;padding:1rem;width: 50%;height:90%;">
        <div  style="display: flex;gap:20px;">
            <img src="<%=product.image%>"  style="height: 100%;width:50%;margin-right:1rem;" alt="Image of Dress">
            <div >
            <p style="font-size: 20px;" > 
                <b><%=product.name%></b> <br>
                <i><%=product.description%> </i><br>
                &#8377;<%=product.price%> <br>
                <%=product.rating%> &#9733;<br>
                <%=product.available%> <span> available </span> <br>
                Sizes available:
                <div class="sizes">
                    <div class="size">XS</div>
                    <div class="size">S</div>
                    <div class="size">M</div>
                    <div class="size">L</div>
                    <div class="size">XL</div>
                </div>
                <br> <br>
                <a href="/wishlist/Kids_Night/<%=product.product_id%>" class="btn back" > Add to Wishlist</a>
                <a href="/cart/Kids_Night/<%=product.product_id%>" class="btn back" > Add to Cart</a>
                <br><br>
                <a href="/order/Kids_Night/<%=product.product_id%>" class="btn back" >Order Now</a>
                <br><br>
                <a href="/kids/nightwear" style="color: black;cursor: pointer;">See more on this collection-></a>
            </p>
            </div>
        </div>
    </div>
    <br><br><br><br><br>
</body>